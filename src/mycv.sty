% usage: \cvtitle{name}{Institute}{Email}{Phone}
\newcommand{\cvtitle}[4]{%
    \begin{minipage}[t]{0.475\textwidth}
        {\fontsize{34}{1}\sffamily\mdseries\upshape #1}
    \end{minipage}
    \begin{minipage}[b]{0.475\textwidth}
        \begin{flushright}
            {\fontfamily{\rmdefault}\selectfont\color{greencolour}\large%
            \textit{#2\\ \Letter\hspace{5pt}#3\\ \Telefon\hspace{5pt}#4}}
        \end{flushright}
    \end{minipage}
    \vspace{1cm}
}%

% usage: {date}{bold\\}{italic\\}{normal}
\newcommand{\cventry}[5]{%
    \noindent\begin{minipage}[t]{\datescolumnwidth}
        \begin{flushright} {#1} \end{flushright}
    \end{minipage}
    \begin{minipage}[t]{\maincolumnwidth}
        \hspace{0.02\textwidth}\parbox[t]{\textwidth}{%
            \ifx#2\else{\bf #2\\}\fi%
            \ifx#3\else{\it #3\\}\fi%
            \ifx#4\else{#4\\}\fi
            \ifx#5\else{\small\newline{} #5\\}\fi
        }%
    \end{minipage}\\
    \vspace{-6pt}
}%

